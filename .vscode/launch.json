{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Unit tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--log-cli-level=INFO",
        "${workspaceFolder}/tests/"
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Stack S3",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "stack",
        "--ccf_path",
        "s3://carlosgjs-noisepy/test_batch/CCF_11Sta",
        "stations=SBC,RIO,DEV,HEC,RLR,SVD,RPV,BAK,CBC,CCA,CCC,CDD,HLL,AGM,AGO",
        "--stack_path",
        "${userHome}/test_temp/STACK",
        "--stack_method",
        "linear"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: stack",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "stack",
        "--ccf_path=${userHome}/test_temp_numpy/CCF",
        "--stack_path=${userHome}/test_temp_numpy/STACK_linear",
        "--stack_method=all",
        "--format=numpy"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: CC ASDF",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "cross_correlate",
        "--freq_norm",
        "rma",
        "--raw_data_path",
        "${userHome}/test_temp/RAW_DATA",
        "--ccf_path",
        "${userHome}/test_temp/CCF",
        "--stations",
        "SBC,RIO,DEV,HEC,RLR,SVD,RPV,BAK"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: cross_correlate",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "cross_correlate",
        "--freq_norm=rma",
        "--raw_data_path=${userHome}/s3tmp/scedc/2022/002",
        "--ccf_path=${userHome}/test_temp_zarr/CCF",
        "--stations=SBC,RIO,DEV,HEC,RLR,SVD,RPV,BAK,CBC,CCA,CCC",
        "--xml_path=${userHome}/s3tmp/FDSNstationXML",
        "--format=numpy"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: S3 cross_correlate",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "cross_correlate",
        "--raw_data_path",
        "s3://scedc-pds/continuous_waveforms/",
        "--ccf_path=s3://carlosgjs-noisepy/test_batch/CCF_scratch",
        "--stations=SBC,RIO,DEV,CHN,RUN",
        "--xml_path=~/s3tmp/FDSNstationXML/",
        "--start=2022-02-01",
        "--end=2022-02-02",
        "--logfile=l.txt",
        "--loglevel=DEBUG",
        "--format=numpy"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: download",
      "type": "python",
      "request": "launch",
      "module": "noisepy.seis.main",
      "args": [
        "download",
        "--start_date",
        "2019-02-01T00:00:00",
        "--end_date",
        "2019-02-01T01:00:00",
        "--stations",
        "ARV,BAK",
        "--inc_hours",
        "1",
        "--raw_data_path",
        "${userHome}/test_temp/RAW_DATA"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
